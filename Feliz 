# JavaScript content
js_content = '''function popBalloon() {
    document.getElementById('balloon').src = "https://img.icons8.com/ios/452/balloon.png";
    document.getElementById('message').classList.remove('hidden');
}

function handleResponse(response) {
    const responseText = document.getElementById('response-text');
    if (response === 'yes') {
        responseText.innerText = 'Que 칩timo! Vamos celebrar juntos!';
    } else if (response === 'no') {
        responseText.innerText = 'U칠, n칚o entendi pq clicou aqui 游뗷游녦';
    }
    document.getElementById('response').classList.remove('hidden');
    document.getElementById('message').classList.add('hidden');
}'''

# Write files
with open(os.path.join(folder_path, 'index.html'), 'w') as f:
    f.write(html_content)

with open(os.path.join(folder_path, 'style.css'), 'w') as f:
    f.write(css_content)

with open(os.path.join(folder_path, 'script.js'), 'w') as f:
    f.write(js_content)

